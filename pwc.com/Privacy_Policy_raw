        // root level items nohide
        $('.linkListLeftNav .leftnav > ul > li').addClass('nohide');
        $('.linkListLeftNav li').each(function () {
            var id = $(this).attr('id');
            if (id == 'selected') {
                //console.log(this);
                // id="selected" nohide
                $(this).addClass('nohide');
                // all parent items nohide
                $(this).parents('.leftnav li').addClass('nohide');
                // all sibling items nohide
                $(this).parents('li').find('> ul > li').addClass('nohide');
                // all child items nohide
                $(this).find('> ul > li').addClass('nohide');
            }
        });
        // now we hide everything without a nohide class
        $('.linkListLeftNav li:not(.nohide)').hide();
    </script>

